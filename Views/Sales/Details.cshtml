@model MicroWaveFood.Models.Sale

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Sale</h4>
    <hr />
    <div class="container row">
        <div class="detail col">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.SaleName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SaleName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SaleRate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SaleRate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.From)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.From)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.To)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.To)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SaleContent)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SaleContent)
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.SaleId }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <div class="col-sm-7">
            <form action="/Sales/AddToSale" method="post">
                <div class="product row">
                    @Html.DropDownList("productId", null, htmlAttributes: new { @class = "form-control col" })
                    <div class="col">
                        <button class="btn btn-primary">Add sale off</button>
                    </div>
                </div>
                @Html.HiddenFor(a => Model.SaleId)
                <input name="url" value="@Request.Url.ToString()" type="hidden" />
            </form>
            <div>
                <div>
                    <h5 class="my-2">Danh sách sản phẩm đang được hưởng khuyến mãi này:</h5>
                    @foreach (var item in Model.Products)
                    {
                        <div class="row">
                            <h5 class="my-2 col">@item.ProductName</h5>
                            <a class="my-2 col" href="@Url.Action("DeleteSale", "Sales", new { @productId = item.ProductId, @url = Request.Url.ToString()})">Delete</a>
                        </div>

                    }
                </div>
            </div>
        </div>


    </div>

</div>

