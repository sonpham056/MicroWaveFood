<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BakingDom - Bring your cake</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    @*<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.0.4/popper.js"></script>
    @*<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">*@
    <link href="~/Template/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
</head>
<body class="body-content">
    <nav class="start-header container-fluid sticky-top navbar-expand-md" style="background-color:aliceblue; padding-left:0!important;padding-right:0!important">
        <nav class="header-navbar ">
            <div class="form-inline mr-auto row" target="_self" style="justify-content: space-evenly">
                <a class="navbar-branch" href="~/Home/Index" style="justify-self:start">

                    <img src="~/Images/logo.png" height="80" />

                </a>

                @using (Html.BeginForm("Search", "Products", FormMethod.Get))
                {
                    <form class="form-group navbar-collapse">
                        <input class="form-control search-field" type="search" name="str" id="search-field">
                        <button style=" border: 1px solid #79737357;" type="submit" class="btn filled">
                            Search<i class="et-icon et-zoom"></i>
                        </button>
                    </form>
                }

                @if (User.IsInRole("admin"))
                {
                    <div class="link-action">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.ActionLink("Product Type", "Index", "ProductTypes", new { }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.ActionLink("Product", "Index", "Products", new { }, new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.ActionLink("Shipping confirm", "OrderConfirm", "Order", new { }, new { @class = "nav-link active" })
                            </li>
                        </ul>
                    </div>
                    <div class="link-action">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                <div class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <a class="nav-link active">Account</a>
                                </div>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @Html.Partial("_LoginPartial")
                                </div>
                            </li>
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.Partial("../Cart/CartPartial")
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="link-action">
                        <ul class="nav navbar-nav navbar-right">
                            @if (Request.IsAuthenticated)
                            {
                                <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                    <div class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <a class="nav-link active">Account</a>
                                    </div>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        @Html.Partial("_LoginPartial")
                                    </div>
                                </li>
                            }
                            else
                            {
                                @Html.Partial("_LoginPartial")
                            }
                            <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                @Html.Partial("../Cart/CartPartial")
                            </li>
                        </ul>
                    </div>

                }



            </div>
        </nav>
    </nav>

    <div class="container body-content mt-3">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer">
                <div class="container-fluid">

                    <div class="row" style="justify-content: space-evenly">

                        <div class="footer-col-1">
                            <h3>Download Our App</h3>
                            <p>Download App for android and iOs.</p>
                            <div>
                                <img src="~/Images/play-store.png" />
                                <img src="~/Images/app-store.png" />
                            </div>
                        </div>

                        <div class="footer-col-2">
                            <div class="app-logo">
                                <img src="~/Images/logo.png" width="20" />
                            </div>

                            <p>Our purpose Is To Sustainably make the Pleasure and BeneFit of Sports Accessible to the Many.</p>

                        </div>
                        <div class="footer-col-3">
                            <h3>Useful Links</h3>
                            <p>Coupons</p>
                            <p>Blog Post</p>
                            <p>Return Policy</p>
                            <p>Become Affiliate</p>
                        </div>
                        <div class="footer-col-4">
                            <h3>Follow Us</h3>
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com/quynhthu1911">Facebook </a>
                                </li>
                            </ul>
                            <ul>
                                <li>
                                    <a href="https://www.instagram.com/quynhthu.qt/">Instagram </a>
                                </li>
                            </ul>
                            <ul>
                                <li>
                                    <a href="https://www.facebook.com/Quoc.Son.QS/">Team Leader </a>
                                </li>
                            </ul>



                        </div>
                    </div>
                    <hr />
                    <p3 class="copyright">Copyright 2021 - QuocPhong</p3>
                </div>
            </div>
        </footer>
    </div>


</body>
</html>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
