@model MicroWaveFood.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="panel panel-default">
            <div class="panel-heading">Edit</div>
            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-1", @style = "margin-top: 10px" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @style = "margin-top: 10px", @readonly = "true" } })
                </div>
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-1", @style = "margin-top: 10px" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "margin-top: 10px" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <div class="col-md-10" style="margin-bottom: -15px">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </div>


        <div class="panel panel-default">
            <div class="panel-heading">Users in this role</div>
            <div class="panel-body">
                @if (Model.Users.Any())
                {
                    foreach (var item in Model.Users)
                    {
                        <div class="panel-body">@item</div>
                    }
                }
                else
                {
                    <div class="panel-body">Nothing is here yet!</div>
                }
            </div>

            <div class="panel-footer">
                @Html.ActionLink("Manage Role", "ManageRole", new { id = Model.Id}, htmlAttributes: new { @class = "btn btn-primary"})
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "ListRoles")
</div>
